import java.util.Scanner;

public class SumNumbersFrom1ToN {
    public static void main(String[] args) {
        Scanner number = new Scanner(System.in);
        int input = number.nextInt();
        int sum = 0;

        for (int i = 0; i <= input; i++) {

            sum += i;
        }
        System.out.println(sum);
    }
}
